{% for figure in figures %}
    <div class="col-md-4">
        <div class="card bg-light mb-3 rounded">
                            
            <img src="{{ asset('images/' ~ figure.mainImage) }}" alt="main-image" class="card-img">
            <div class="card-body text-center">                         
                
                <a href="{{ path('figure_show', {'slug': figure.slug}) }}">{{figure.name}}</a>
                <a href="{{ path('figure_edit', {'slug': figure.slug}) }}" class="btn btn-warning rounded"><i class="fa fa-edit"></i></a>
                <a href="{{ path('figure_delete', {'slug': figure.slug}) }}" class="btn btn-danger rounded"><i class="fa fa-trash"  onclick="return confirm(`Voulez vous rÃ©ellement supprimer la figure : {{figure.name}} ?`)"></i></a>
                
            </div>
        </div>
    </div>
{% endfor %}