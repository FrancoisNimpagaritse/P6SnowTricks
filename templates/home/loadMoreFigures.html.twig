{% for figure in figures %}
    <div class="col-md-4  col-sm-6 col-xs-12">
        <div class="card bg-light mb-3 rounded">
                            
            <img src="{{ asset('images/' ~ figure.mainImage) }}" alt="main-image" height="300px" width="270px" class="card-img">
            <div class="card-body text-center">                         
                
                <a href="{{ path('figure_show', {'slug': figure.slug}) }}">{{figure.name}}</a>
                <a href="{{ path('figure_edit', {'slug': figure.slug})}}"><img src="{{ asset('images/pencil.png') }}" alt="Modifier"></a>
                <a href="{{ path('figure_delete', {'slug': figure.slug}) }}"><img src="{{ asset('images/trash.png') }}" alt="Supprimer" onclick="return confirm(`Voulez vous rÃ©ellement supprimer la figure : {{figure.name}} ?`)"></a>
            </div>
        </div>    
    </div>
{% endfor %}