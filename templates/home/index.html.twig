{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Accueil{% endblock %}

{% block body %}
<div class="container-fluid">            
    <div class="row py-5 pb-3 pl-3">
        <div class="col-md-5 bg-primary text-white rounded">   
            <h1>Figures magnifiques !</h1>
        </div>
        <div class="col-md-5"></div>
        <div class="col text-center m-auto pt-3"> 
        {% if(app.user) %}           
            <a href="{{ path('figure_create') }}" class="btn btn-success rounded">Ajouter une figure</a>
        {% endif %}
        </div>
        <div class="">
            <p id="up" class="float-right"><a href="#down" class="btn btn-primary fa fa-arrow-down"></a></p>
        </div>
    </div>
    <div class="row">
        {% for figure in figures %}
            <div class="col-md-4">
                <div class="card bg-light mb-3 rounded">
                                    
                    <img src="{{ asset('images/' ~ figure.mainImage)}}" alt="main-image" class="card-img">
                    <div class="card-body text-center">                         
                        
                        <a href="{{ path('figure_show', {'slug': figure.slug})}}">{{figure.name}}</a>
                        <a href="{{ path('figure_edit', {'slug': figure.slug})}}" class="btn btn-warning rounded"><i class="fa fa-edit"></i></a>
                        <a href="{{ path('figure_show', {'slug': figure.slug})}}" class="btn btn-danger rounded"><i class="fa fa-trash"></i></a>
                       
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<div class="text-center">
    <a href="" class=" btn btn-primary rounded">Afficher plus...</a>
    <p id="down" class="float-right"><a href="#up" class="btn btn-primary fa fa-arrow-up"></a></p>
</div>
{% endblock %}
