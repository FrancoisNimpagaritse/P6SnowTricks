<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue sur SnowTricks!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{ asset('css/myStyle.css') }}">
        <script src="https://use.fontawesome.com/35f10bd2c8.js"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('homepage') }}">SnowTricks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ml-auto pr-5"> 
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Accueil
                        <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-block">
                        <a class="nav-link" href="#">|</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Figures
                        <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-block">
                        <a class="nav-lik " href="#">|</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tricks</a>
                        <div class="dropdown-menu">
                        
                        </div>
                    </li>
                    <li class="nav-item  d-none d-sm-block">
                        <a class="nav-link" href="#">|</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.firstname }}</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('account_profile') }}">Modifier profil</a>                        
                        </div>
                    </li>
                    <li class="nav-item d-none d-sm-block">
                        <a class="nav-link" href="#">|</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('account_logout') }}">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item d-none d-sm-block">
                        <a class="nav-link" href="#">|</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('account_login') }}">Connexion</a>
                    </li>
                {% endif %}
                </ul>
            </div>
        </nav>

        {% for label, messages in app.flashes %}
            <div class="container py-3">
                <div class="alert alert-{{label}}">
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}        
        
        {% block body %}{% endblock %}        

        <div class="text-center p-3 m-3 bg-light d-none d-sm-block">            
            <footer id="footer">
                <p>Copyright! SnowTricks, &copy 2020</p>
            </footer>            
        </div>
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
