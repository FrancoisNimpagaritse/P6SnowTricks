{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Création d'une catégorie{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 mt-3 pb-3 bg-light rounded">
            <h1 class="m-3 pb-3 text-center">Créer une nouvelle catégorie</h1>
            {{form_start(form)}}          
            {{form_widget(form)}}
            <button type="submit" class="btn btn-success rounded">Enregistrer</button>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}